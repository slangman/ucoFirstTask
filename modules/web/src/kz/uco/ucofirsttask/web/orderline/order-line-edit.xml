<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="kz.uco.ucofirsttask.web.orderline.OrderLineEdit"
        datasource="orderLineDs"
        focusComponent="fieldGroup"
        messagesPack="kz.uco.ucofirsttask.web.orderline">
    <dsContext>
        <datasource id="orderLineDs"
                    class="kz.uco.ucofirsttask.entity.OrderLine"
                    view="orderLine-with-product"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderLineDs">
            <column width="250px">
                <field property="product"/>
                <field property="quantity"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
