<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="kz.uco.ucofirsttask.web.product.ProductView"
        messagesPack="kz.uco.ucofirsttask.web.product"
        datasource="productDs">
    <dsContext>
        <datasource id="productDs"
                    class="kz.uco.ucofirsttask.entity.Product"
                    view="product-view-with-image"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <vbox
                align="MIDDLE_CENTER"
                spacing="true">
            <label id="productName"/>
            <label id="productDescription"/>
            <image id="productImage"
            align="MIDDLE_CENTER"/>
        </vbox>
    </layout>
</window>
